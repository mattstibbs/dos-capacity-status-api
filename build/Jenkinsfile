pipeline {
    agent {
        label 'jenkins-slave'
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    stages {
        stage("Print Variables") {
            steps {
                script {
                    echo 'make pipeline-print-variables'
                }
            }
        }
        stage("Plan Deployment") {
            steps {
                script {
                    echo 'make project-plan-deployment'
                }
            }
        }
        stage("Build") {
            when {
                expression {
                    return true
                }
            }
            steps {
                script {
                    echo 'build'
                    sh 'make project-build'
                }
            }
        }
        stage("Code Quality Gate") {
            when {
                expression {
                    return true
                }
            }
            steps {
                script {
                    echo 'code quality gate'
                }
            }
        }
        stage("Unit Test Gate") {
            steps {
                script {
                    echo 'unit test gate'
                }
            }
        }
        stage("Regression Test Gate") {
            when {
                expression {
                    return true
                }
            }
            steps {
                script {
                    echo 'regression test gate'
                }
            }
        }
        stage("Deploy") {
            when {
                expression {
                    return true
                }
            }
            steps {
                script {
                    echo 'deploy'
                }
            }
        }
    }
    post {
        always {
            echo 'make pipeline-test-cleanup'
        }
    }
}
